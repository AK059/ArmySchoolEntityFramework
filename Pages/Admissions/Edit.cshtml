@page
@model ArmySchoolEntityFramework.Pages.Admissions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Admission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Admission.AdmissionID" />
            <div class="form-group">
                <label asp-for="Admission.SubjectID" class="control-label"></label>
                <select asp-for="Admission.SubjectID" class="form-control" asp-items="ViewBag.SubjectID"></select>
                <span asp-validation-for="Admission.SubjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admission.StudentID" class="control-label"></label>
                <select asp-for="Admission.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                <span asp-validation-for="Admission.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admission.Grade" class="control-label"></label>
                <input asp-for="Admission.Grade" class="form-control" />
                <span asp-validation-for="Admission.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
